    <name>Acorn</name>
    <vendor>Matt Worzala</vendor>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">

        <fileType
                name="Acorn File"
                implementationClass="org.acornlang.language.AcornFileType"
                fieldName="INSTANCE"
                language="Acorn"
                extensions="acorn"/>

